{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "noImplicitAny": true,
      "isolatedModules": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
    },
    "include": [
      "src/**/*.ts", "tests/**/*.ts",
    ],
    "exclude": [
      "node_modules/**/*",
    ],
    "lib": ["es2015"]
}